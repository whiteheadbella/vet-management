# Environment Configuration Example
# Copy this file to .env and update with your actual values

# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-this-in-production

# Database URLs
ADOPTION_DB_URI=sqlite:///adoption_system.db
SHELTER_DB_URI=sqlite:///shelter_system.db
VETERINARY_DB_URI=sqlite:///veterinary_system.db

# System URLs (for inter-system communication)
ADOPTION_SYSTEM_URL=http://localhost:5000
SHELTER_SYSTEM_URL=http://localhost:5001
VETERINARY_SYSTEM_URL=http://localhost:5002

# Email Configuration (Gmail SMTP example)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-specific-password
MAIL_DEFAULT_SENDER=your-email@gmail.com

# API Keys
DOG_API_KEY=not-required-for-dog-ceo-api
CAT_API_KEY=your-cat-api-key-from-thecatapi.com

# Google Calendar API
GOOGLE_CALENDAR_CREDENTIALS_FILE=credentials.json
GOOGLE_CALENDAR_TOKEN_FILE=token.json

# File Upload Configuration
UPLOAD_FOLDER=static/uploads
MAX_CONTENT_LENGTH=16777216  # 16MB max file size
ALLOWED_EXTENSIONS=png,jpg,jpeg,gif

# Pagination
PETS_PER_PAGE=12
RECORDS_PER_PAGE=20

# Session Configuration
SESSION_COOKIE_SECURE=False  # Set to True in production with HTTPS
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
PERMANENT_SESSION_LIFETIME=3600  # 1 hour in seconds
